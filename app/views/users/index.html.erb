<% provide(:title, 'All users') %>
<h1>All users</h1>

<%= will_paginate%>

<ul class="users">
  <% @users.each do |user| %>
    <li>
      <%= gravatar_for user, size: 50 %>
      <%= link_to user.name, user %>
      <%= %>
      <% if current_user.permission == "admin" && !current_user?(user) %>
        <%= link_to "Remove user", user, method: :delete, data: { confirm: "Are you sure you want to remove #{user.name}?" }, class: 'btn btn-primary' %>
      <% end %>
    </li>
  <% end %>
</ul>

<%= will_paginate%>

